@model ToDo_Test_Project.Models.ToDoDB
@{
    ViewBag.Title = "Edit Item";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <span class="AlignRight">@Html.ActionLink("Back to List", "Index")</span>
    <table class="ToDoTable">
        <col width="500" />
        <tr>
            <th class="ToDoHead">Name: 
                @Html.TextBoxFor(model => model.Name)
                @Html.ValidationMessageFor(model => model.Name)

            </th>
            <th class="ToDoHead">Due: 
                @Html.EditorFor(model => model.DueDate)
                @Html.ValidationMessageFor(model => model.DueDate)
            </th>
        </tr>
        <tr>
            <td colspan="2" class="ToDoDetails">Details:<br />
                <div class="editForDetails">
                    @Html.TextAreaFor(model => model.Details)
                    @Html.ValidationMessageFor(model => model.Details)
                </div>
            </td>
        </tr>
    </table>

    <p>
        <input class="AlignRight" type="submit" value="Save" />
    </p>
    
}
